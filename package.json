{
  "name": "ai-tone-tuner-bot",
  "version": "1.0.0",
  "description": "AI Tone Tuner Telegram Bot with Express, Prisma, and YooKassa integration",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate:dev": "prisma migrate dev && prisma generate",
    "migrate:deploy": "prisma migrate deploy && prisma generate",
    "db:reset": "prisma migrate reset --force --skip-seed && prisma generate",
    "prisma:studio": "prisma studio",
    "postinstall": "if [ \"$RAILWAY_ENVIRONMENT\" = \"production\" ]; then npx prisma migrate deploy && npm run build; fi",
    "test:simulateLoad": "npx ts-node src/tests/simulateLoad.ts",
    "test:metrics": "npx ts-node src/tests/testMetrics.ts"
  },
  "prisma": {
    "schema": "src/db/schema.prisma"
  },
  "keywords": [
    "telegram",
    "express",
    "ai",
    "bot",
    "openai",
    "yookassa"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "axios": "^1.13.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "node-cron": "^4.2.1",
    "openai": "^6.7.0",
    "telegraf": "^4.16.3",
    "winston": "^3.18.3",
    "yookassa": "^0.1.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.9.1",
    "prisma": "^6.18.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
